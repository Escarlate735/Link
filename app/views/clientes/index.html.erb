<nav>
	<div class="nav-wrapper">
		<div class="col s12">
      <%= link_to 'Home', { controller: 'welcome'} , class: 'breadcrumb'%>
      <%= link_to 'Patrocinadores', clientes_path, class: 'breadcrumb'%>
		</div>
	</div>
</nav>

<div class="section no-pad-bot">
	<div class="container">
		<div class="section white">
			<div class="row"></div>
			<div class="row center">
				<%=  link_to "Ajude-nos a derrotar Ganon", new_cliente_path(@cliente), class:"btn tooltipped waves-effect waves-light btn", 'data-position':"bottom", 'data-tooltip':"Crie sua conta!"%>
			</div>
			<div class="row"></div>



			<table class="highlight">
				<thead>
					<tr>
						<th>Nome</th>
            <th>Status</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @clientes.each do |cliente|%>
					<tr>
					<td><%= cliente.Nome %></td>
					<td><%= cliente.Status %></td>
					<td><%= link_to 'Info', cliente_path(cliente), class:'waves-effect waves-light btn' %></td>
				    <td><%= link_to 'Editar', edit_cliente_path(cliente), class:'waves-effect waves-light btn' %></td>
				    <td><%= link_to 'Deletar', cliente_path(cliente), class:'waves-effect waves-light btn',
									method: :delete,
									data: { confirm: 'Tem certeza?' } %></td>
					</tr>
				<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>
