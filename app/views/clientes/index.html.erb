<nav>
	<div class="nav-wrapper">
		<div class="col s12">
			<a href="http://localhost:3000/welcome/index" class="breadcrumb">Welcome</a>
			<a href="http://localhost:3000/clientes" class="breadcrumb">Patrocinadores</a>
		</div>
	</div>
</nav>


<div class="section no-pad-bot">
	<div class="container">
		<div class="section white">
			<div class="row"></div>
			<div class="row center">
				<a href="http://localhost:3000/clientes/new" class="btn tooltipped waves-effect waves-light btn" data-position="bottom" data-tooltip="Crie sua conta!">Ajude-nos a derrotar Ganon</a>
			</div>
			<div class="row"></div>

			<table class="highlight">
				<thead>
					<tr>
						<th>Nome</th>
						<th>CPF</th>
						<th>Email</th>
						<th>Endereco</th>
						<th>Data de Nascimento</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @clientes.each do |cliente|%>
					<tr>
					<td><%= cliente.Nome %></td>
					<td><%= cliente.CPF %></td>
					<td><%= cliente.Email %></td>
					<td><%= cliente.Endereco %></td>
					<td><%= cliente.Data_de_Nascimento %></td>
					<td><%= cliente.Status %></td>
					<td><a href="http://localhost:3000/clientes/2" class="waves-effect waves-light btn">Info</a> </td>
				    <td><a href="http://localhost:3000/clientes/2/edit"class="waves-effect waves-light btn">Editar</a></td>
				    <td><%= link_to 'Encerrar conta', cliente_path(cliente),
									method: :delete,
									data: { confirm: 'Tem certeza?' } %></td>
					</tr>
				<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>
