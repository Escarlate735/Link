<%= form_with(model: [ @cliente, @cliente.pacotes.build ], local: true) do |form| %>
  <p class="1">
    <%= form.label :Pagamento %><br>
    <%= form.text_field :Pagamento, 'data-mask': "R$ 0.000.000.000,00", placeholder: "R$ 1.000.000.000,00"%>
  </p>
  <p class="1">
    <%= form.label :Plano %><br>
    <%= select(:pacote, :Plano, [['fã de Zelda', 'fã de Zelda'], ['fã de Link', 'fã de Link'], ['fanático pelo time', 'fanático pelo time']]) %>
  </p>
  <p class="1">
  <%= submit_tag "Comprar pacote" %>
  </p>
<% end %>
