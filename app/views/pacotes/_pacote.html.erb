<% @cliente.pacotes.each do |pacote| %>
  <p>
    <strong>Pagamento:</strong>
    <%= pacote.Pagamento %>
  </p>
 
  <p>
    <strong>Status:</strong>
    <%= pacote.Plano %>
  </p>
  <p>
  	<%= link_to 'Destroy Pacote', [pacote.cliente, pacote],
  		method: :delete,
  		data: { confirm: 'Tem certeza?'}	%>
  </p>
<% end %>